<% layout('/layouts/boilerplate') -%>
<form method="POST" action="/product" class="col-6 offset-3 add" enctype="multipart/form-data">
    <h3>Add Product</h3>
<div class="mb-3">
    <label for="title">Title</label>
    <input type="text" placeholder="Title" name="product[title]" id="title" class="form-control">
</div>
<div class="mb-3">
    <label for="description">Description</label>
    <input type="text" placeholder="Description" name="product[description]" id="ImgUrl" class="form-control">
</div>
<div class="mb-3">
    <label for="ImgUrl">Upload Image</label>
    <input type="file" placeholder="img Url/Link" id="imgUrl" name="product[imgUrl]" class="form-control" required>
</div>

<div class="mb-3">
    <label for="price">Price</label>
    <input type="text" placeholder="price" name="product[price]" id="price" class="form-control">
</div>
<div class="mb-3 ">
    <button class="btn btn-success">Submit</button>
</div>

</form>
